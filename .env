# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Shutterstock API Credentials (optional)
SHUTTERSTOCK_API_KEY=your_shutterstock_api_key
SHUTTERSTOCK_SECRET=your_shutterstock_secret

# Adobe Stock API Credentials (optional) 
ADOBE_STOCK_API_KEY=your_adobe_stock_api_key
ADOBE_STOCK_SECRET=your_adobe_stock_secret

# Getty Images API Credentials (optional)
GETTY_API_KEY=your_getty_api_key
GETTY_SECRET=your_getty_secret

# Application Settings
MAX_KEYWORDS_DEFAULT=30
DEFAULT_LANGUAGE=en,zh
DEFAULT_MODEL=gpt-4o-mini
TEMPERATURE=0.2

# File Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=jpg,jpeg,png,tiff,tif

# SEO Settings
KEYWORD_DENSITY_TARGET=0.02
MIN_KEYWORD_LENGTH=3
MAX_KEYWORD_LENGTH=30